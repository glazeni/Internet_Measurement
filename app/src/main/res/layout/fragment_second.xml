<RelativeLayout
    android:id="@+id/fragment_second_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.second.SecondFragment">

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/graph_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Bandwidth Estimation"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/graph_X_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:gravity="center"
        android:text="Time/s"/>

    <TextView
        android:id="@+id/graph_Y_label"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="90dp"
        android:rotation="-90"
        android:text="Bandwidth"/>


    <!-- BAR RESULT VIEW -->
    <LinearLayout
        android:id="@+id/results_container"
        android:layout_width="308dp"
        android:layout_height="25dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/text_view_rectangle"
        android:orientation="horizontal"
        >
        <!-- Connection Type-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:text="Connection"
            android:textColor="@color/Black"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_worlwide_transmission"/>

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#4fa5d5"/>

        <!-- Measurement Type-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:text="Type"
            android:textColor="@color/Black"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_swap_vertical_circle_white_18px"/>

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#4fa5d5"/>

        <!-- Date -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:text="Date"
            android:textColor="@color/Black"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_date_range_white_18px"/>

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#4fa5d5"/>

        <!-- Result -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:text="Average"
            android:textColor="@color/Black"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_speed_test"/>

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="2dp"
            android:background="#4fa5d5"/>

        <!-- Ping -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:text="Ping"
            android:textColor="@color/Black"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_swap_horiz_white_18px"/>

    </LinearLayout>

    <!-- RESULT VIEW -->

    <RelativeLayout
        android:id="@+id/result_view"
        android:layout_width="308dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="320dp"
        android:background="@drawable/text_view_rectangle"
        android:orientation="vertical"
        >
        <!-- Connection Info-->

        <TextView
            android:id="@+id/connection_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="12dp"
            android:text="3G"
            android:textColor="@color/Black"
            android:textSize="20sp"
            />

        <!--        <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="86dp"
                    android:background="#4fa5d5"/>-->

        <!-- Measurement Info-->

        <TextView
            android:id="@+id/measurement_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="14dp"
            android:text="uplink"
            android:textColor="@color/Black"
            />
        <!--        <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="137dp"
                    android:background="#4fa5d5"/>-->

        <!-- Date Info-->

        <TextView
            android:id="@+id/date_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/Black"
            />
        <!--
                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="195dp"
                    android:background="#4fa5d5"/>
        -->


        <!-- Average Info-->

        <TextView
            android:id="@+id/average_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="5dp"
            android:text="300MB/s"
            android:textColor="@color/Black"
            />
        <!--        <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="270dp"
                    android:background="#4fa5d5"/>-->

        <!-- Ping Info-->

        <TextView
            android:id="@+id/ping_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="275dp"
            android:layout_marginTop="5dp"
            android:text="20ms"
            android:textColor="@color/Black"
            />

    </RelativeLayout>
</RelativeLayout>
